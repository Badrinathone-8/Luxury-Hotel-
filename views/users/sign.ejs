<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h3>Sign in to Wonderlust</h3>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div>
            <label for="username" class="form-label"> Username</label>
            <input id="username" class="form-control"  name="username" type="text" class="form-control" required>
        </div>
         <div>
            <label for="email" class="form-label"type="email" id="email">Email </label>
            <input id="email" type="email" id="email" class="form-control" name="email" required>
        </div>
        <div>
            <label for="password" class="form-label">password </label>
            <input id="password" type="password" id="password" class="form-control" name="password" required>
        </div>
        <br>
        <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>